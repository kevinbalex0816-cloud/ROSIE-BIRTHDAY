    <script>
        const targetDate = new Date("Jan 17, 2026 00:00:00").getTime();
        function updateCountdown() {
            const now = new Date().getTime(); const d = targetDate - now;
            document.getElementById("countdown-timer").innerHTML = `âŒ› ${Math.floor(d/(1000*60*60*24))}d ${Math.floor((d%(1000*60*60*24))/(1000*60*60))}h ${Math.floor((d%(1000*60*60))/(1000*60))}m ${Math.floor((d%(1000*60))/1000)}s ğŸ‚`;
        }
        setInterval(updateCountdown, 1000);

        const pLayer = document.getElementById('particle-layer');
        const pTypes = ['â„ï¸', 'âœ¨', 'ğŸŒ¹', 'â„ï¸'];
        function createP() {
            const p = document.createElement('div'); p.className = 'falling-item';
            p.innerHTML = pTypes[Math.floor(Math.random() * pTypes.length)];
            p.style.left = Math.random() * 100 + 'vw';
            p.style.fontSize = (Math.random() * 18 + 10) + 'px';
            p.style.animationDuration = (Math.random() * 5 + 5) + 's';
            pLayer.appendChild(p); setTimeout(() => p.remove(), 10000);
        }
        setInterval(createP, 300);

        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        function synthRev(freq) {
            if (audioCtx.state === 'suspended') audioCtx.resume();
            const osc = audioCtx.createOscillator(); const gain = audioCtx.createGain();
            osc.type = 'sawtooth'; osc.frequency.setValueAtTime(freq, audioCtx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(freq * 5, audioCtx.currentTime + 0.1);
            osc.frequency.exponentialRampToValueAtTime(freq, audioCtx.currentTime + 0.5);
            gain.gain.setValueAtTime(0.1, audioCtx.currentTime);
            osc.connect(gain); gain.connect(audioCtx.destination);
            osc.start(); osc.stop(audioCtx.currentTime + 0.5);
            confetti({ particleCount: 50 });
        }
        function start() { audioCtx.resume(); document.getElementById("saopaulo").play().catch(e=>console.log("Music error")); window.scrollBy({ top: 500, behavior: 'smooth' }); }
        function sendMsg() { confetti({ particleCount: 200 }); alert("Message received! Nighty Nighty, Rosie! ğŸŒ¹"); }
    </script>
